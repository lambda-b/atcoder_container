{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "cppbuild",
      "label": "C/C++: g++ アクティブなファイルのビルド",
      "command": "/usr/bin/g++",
      "args": [
        "-fdiagnostics-color=always",
        "-g3",
        "${file}",
        "-o",
        "${fileDirname}/out/${fileBasenameNoExtension}",
        "-I",
        "${workspaceFolder}/include",
        "-std=c++17"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": "build",
      "detail": "コンパイラ: /usr/bin/g++"
    },
    {
      "type": "shell",
      "label": "C/C++: AtCoder自動テスト",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "command": "${workspaceFolder}/scripts/cptest.sh",
      "args": [
        "${workspaceFolder}",
        "${fileDirname}",
        "${fileBasenameNoExtension}"
      ]
    }
  ]
}
